{% include "header.html.twig" %}
{% block stylesheets %}
{{ encore_entry_link_tags('accueil') }}
{% endblock %}
{% block body %}
<div class="container mt-5">
  <div class="row">
    <div class="[ col-xs-12 col-sm-8  col-md-10 col-lg-10 ] align-self-center">
    {{ form_start(formCreationAnnonce) }}
    <button class="btn btn-info" type="submit">
      Poster l'annonce
    </button>
    {{ form_end(formCreationAnnonce)}}
    </div>
  </div>
</div>

<div class="container mt-5">
		<div class="row">
        <h2 class="mb-3">Liste des groupes en cours de cr√©ation :</h2>
			<div class="[ col-xs-12 col-sm-8  col-md-10 col-lg-10 ] align-self-center">
				<ul class="event-list">
          {% for add in listAnnonce %}
            <li>
                <time datetime="2014-07-20 0000">
                  <span class="day">{{1}}/{{add.modeDeJeu.joueurMax}}</span>
                  <span class="month">{{add.modeDeJeu.libelle}}</span>
                </time>
                <div class="info">
                  <h2 class="title">{{add.pseudo}} ( {{add.cote}} <i style="color:red" class="fas fa-fire"></i> )</h2>
                  <p class="desc">{{add.description}}</p>
                  <ul>
                    <li style="width:50%;"><a href="#website"><span class="fa fa-globe"></span> Voir stats </a></li>
                    <li style="width:50%;"><span class="fa fa-money"></span> Ajouter relation </li>
                  </ul>
                </div>
                <div class="social">
                  <ul>
                    <li class="facebook" style="width:33%;"><a href="#facebook"><span class="fa fa-facebook"></span></a></li>
                    <li class="twitter" style="width:34%;"><a href="#twitter"><span class="fa fa-twitter"></span></a></li>
                    <li class="google-plus" style="width:33%;"><a href="#google-plus"><span class="fa fa-google-plus"></span></a></li>
                  </ul>
                </div>
              </li>

            {% endfor %}
				</ul>
			</div>
		</div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col align-self-center">
          <div class="wrapper"></div>
      </div>
    </div>
  </div>
  
<!--BODY BLOCK-->
{% endblock %}
